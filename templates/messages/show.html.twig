{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Startmessage</th>
                <td>{{ message.startmessage ? message.startmessage|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('messages_index') }}">back to list</a>
        {% if is_granted('ROLE_ADMIN') %}
        
            <a href="{{ path('messages_edit', {'id': message.id}) }}">edit</a>
             {{ include('messages/_delete_form.html.twig') }}
        {% endif %}
{% endblock %}
